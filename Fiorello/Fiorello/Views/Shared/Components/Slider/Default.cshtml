@model HomeVM

<div class="owl-carousel slider">
    @foreach (Slider slider in Model.Sliders)
    {
        <div> <img src="~/img/@slider.Image" alt=""> </div>
    }

</div>
<div class="container context pl-lg-5 ml-lg-3">
    <div class="row">
        <div class="col-lg-5">
            <div class="text">
                <h1>@Html.Raw(Model.SliderInfo.Title)</h1>
                <h1>@Model.SliderInfo.SubTitle</h1>
                <p class="text-black-50 d-none d-sm-block">@Model.SliderInfo.Description</p>
            </div>
            <div class="img">
                <img src="~/img/@Model.SliderInfo.Image" alt="">
            </div>
        </div>
    </div>
</div>